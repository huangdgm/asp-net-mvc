@*
    This serves as the helper method.
*@
@helper FormatAmount(decimal amount)
    {
        var color = "green";

        if (amount < 0)
        {
            color = "red";
        }

        // '{0:C}' here formats the amount with the currency format.
        <span style="color:@color">@String.Format("{0:C}", amount)</span>
}

